<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="6dp" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_message_chat_header_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_icon_user" />

        <FrameLayout
            android:id="@+id/fl_msg_chat_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_unread_bg" />

            <TextView
                android:id="@+id/tv_msg_chat_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="@color/white" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_message_chat_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="3dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="用户名" />

        <TextView
            android:id="@+id/tv_message_chat_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:text="时间" />
    </LinearLayout>

</LinearLayout><!-- From: file:/I:/AndroidStudioProjects/app/src/main/res/layout/message_chat_item.xml -->